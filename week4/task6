class Solution {
    public void moveZeroes(int[] nums) {
        int idx = 0;

        // Move non-zero elements forward
        for (int num : nums) {
            if (num != 0) {
                nums[idx++] = num;
            }
        }

        // Fill remaining positions with zero
        while (idx < nums.length) {
            nums[idx++] = 0;
        }
    }
}
